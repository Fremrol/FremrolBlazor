@inherits FremrolBlazor.Models.BaseToast

<div class="toast-content">
    @for (int i = 0; i < 1; i++)
    {
        <div class="blazor-toast @(IsVisible ? "toast-visible" : "") @Class" style="@Style">
            <div class="toast-head">
                @Head
            </div>
            <div class="toast-body">
                @Body
            </div>
        </div>
    }
</div>

<style>
    .blazor-toast {
        display: none;
        padding: 1rem;
        color: #fff;
        z-index: 1;
        position: fixed;
        width: 25rem;
        top: 2rem;
        border-radius: 1rem;
        right: 2rem;
    }
    
    .toast-body {
        display: flex;
        flex-direction: column;
        flex: 1;
        padding: 0;
    }
    
    .toast-visible {
        display: flex;
        flex-direction: column;
        animation: fadein 1.5s;
    }
    
    @@keyframes fadein {
        from {
            opacity: 0;
        }
    
        to {
            opacity: 1;
        }
    }
</style>

